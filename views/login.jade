extends layout_other
block page
  - var menu = 'login'
block content
  .col-md-4.col-md-offset-4
    h2 Log in
    if(error)
      div.alert.alert-danger=error
    if(info)
      div.alert.alert-success=info
    div
      form(action="/login", method="POST")
        p
          input.form-control(name="username", type="text", placeholder="username")
        p
          input.form-control(name="password", type="password", placeholder="***")
        p
          button.btn.btn-lg.btn-primary.btn-block(type="submit") Log in
